{
  "singleQuote": true,
  "semi": true,
  "trailingComma": "es5",
  "printWidth": 100,
  "tabWidth": 2,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/index.ts",
      "options": {
        "plugins": ["prettier-plugin-sort-re-exports"]
      }
    }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": [
    "^react",
    "^next",
    "<BUILTIN_MODULES>",
    "<THIRD_PARTY_MODULES>",
    "^@/.*",
    "^[.]{2}/.*",
    "^[.]/.*",
    "^./index$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
